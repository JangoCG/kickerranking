<body>
  
  <h3>Sieger</h3>
  <form action="/" method="post">
    <div class="form-group">
      <select class="form-control" id="exampleFormControlSelect1" name="winner1">
        <% nameArray.forEach(function(item){ %>
        <option> <%= item.name %> </option>
        <% })%>
      </select>
    </div>
    <div class="form-group">
      <select class="form-control" id="exampleFormControlSelect1" name="winner2">
        <% nameArray.forEach(function(item){ %>
        <option> <%= item.name %> </option>
        <% })%>
      </select>
    </div>


    <h3>Verlierer</h3>
    <div class="form-group">
      <select class="form-control" id="exampleFormControlSelect1" name="looser1">
        <% nameArray.forEach(function(item){ %>
        <option> <%= item.name %> </option>
        <% })%>
      </select>
      <div class="form-group">
        <select class="form-control" id="exampleFormControlSelect1" name="looser2">
          <% nameArray.forEach(function(item){ %>
          <option> <%= item.name %> </option>
          <% })%>
        </select>
      </div>
      <button type="button submit" class="btn btn-primary">Berechne Elo</button>
  </form>




  <form action="register" method="post">
    <input type="text" name="playername" placeholder="Names des Spielers">
    <button type="button submit" class="btn btn-primary">HinzufÃ¼gen</button>
  </form>




  <h1>Rangliste</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Rating</th>
      </tr>
    </thead>
    <tbody>
      <% ratingArray.forEach(function(item){ %>
      <tr>
        <td><%= item.name%></td>
        <td><%= JSON.stringify(item.rating) %></td>
      </tr>
      <% }) %>
      <tr>
    </tbody>
  </table>
</body>

</html>